@import '../../../common.styl'

.screenWrapper
    width 100%
    padding 28px

.screen
    background white
    border-radius 10px
    padding 40px 50px
    max-height 100%
    overflow-y scroll
    coolScrollbar()

.title
    font-size 1.5em
    margin-bottom 20px

.table 
    background white

.head
    font-weight 500

.row
    tableRow(64px)
    grid-template-columns 0.7fr repeat(4, 1fr) 

.body
    padding-bottom 30px

.pagination
    display flex

    button
        margin-right 10px

.loading 
    display block
    margin-bottom 20px